{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back_custom.css') }}" />
{% endblock %}

{% block body_id %}admin-body{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-11 m-3">

                <div class="row">
                    <div class="col-md-6">
                        <h2 class="mb-4">
                            {% block edit_title %}{% endblock %}
                        </h2>
                    </div>
                    <div class="col-md-6">
                        <div class="float-right">
                            {% block edit_top_buttons %}{% endblock %}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {% block edit_content %}{% endblock %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}