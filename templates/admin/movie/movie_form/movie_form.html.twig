{{ form_start(form) }}

<div class="row">
    <div class="col-md-12">

        {% form_theme form 'form/field.html.twig' %}

        {{ form_row(form.title) }}
        {{ form_row(form.director) }}
        {{ form_row(form.actors) }}

        <div class="row">
            <div class="col-md-2">
                {{ form_label(form.roles) }}
            </div>
            <div class="col-md-10">
                <ul class="roles" data-prototype="{{ include('admin/movie/movie_form/role_prototype.html.twig', {'role_prototype': form.roles.vars.prototype})|e }}">
                    {% for roleField in form.roles %}
                        {{ include('admin/movie/movie_form/role_prototype.html.twig', {'role_prototype': roleField})|raw }}
                    {% endfor %}
                </ul>

                <button id="add_role_button" class="btn btn-primary pull-right">Add role</button>
                <br/><br/><br/>
            </div>
        </div>

        {{ form_row(form.year) }}
        {{ form_row(form.duration) }}
        {{ form_row(form.synopsis) }}
        {{ form_row(form.rating) }}
        {{ form_row(form.review) }}
        {{ form_row(form.genre) }}

        <div class="row">
            <div id="movie-form-tags" class="col-md-6">
                {{ form_row(form.tags) }}
                {#{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}#}
                {#{{ form_widget(form.tags.vars.prototype)|raw }}#}
                {#<ul class="tags" data-prototype="">#}
                    {#{% for tag in form.tags %}#}
                        {#<li>{{ form_row(tag.name) }}</li>#}
                    {#{% endfor %}#}
                {#</ul>#}


            </div>
            <div class="col-md-6">
                Cr√©er un nouveau tag : <input type="text" id="new-tag" /> <button id="new-tag-submit" class="btn btn-outline-primary">Ajouter</button>
            </div>
        </div>




        {% if app.request.attributes.get('_route') == 'admin_movie_edit' %}
            {{ form_row(form.newPoster) }}
        {% else %}
            {{ form_row(form.poster) }}
        {% endif %}

        {{ form_widget(form._token) }}

        <div class="float-right">
            <input class="btn btn-success" type="submit" value="{{ app.request.attributes.get('_route') == "admin_movie_edit" ? "Edit" : "Create" }}"/>
        </div>

    </div>
</div>

{{ form_end(form, {'render_rest': false}) }}