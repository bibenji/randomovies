<div id="comments" class="col-md-12">

    <div class="comments-total-notes float-right text-center">
        <div class="text-right">
            Total des notes des utilisateurs pour ce film :
        </div>
        <strong>{{ totalUsersNotes(comments) }} / 5</strong>
    </div>

    <h4>Commentaires</h4>

    {% for comment in comments %}
        <div class="comment">
            <div class="float-right">Le 00/00/0000 Ã  00h00</div>
            <p class="comment-pseudo">{{ comment.user.username }}</p>
            <p class="comment-comment">{{ comment.comment }}</p>
            {% if comment.note %}
                <p class="comment-note">La note de {{ comment.user.username }} : {{ comment.note }} / 5</p>
            {% endif %}
        </div>
    {% endfor %}

    <hr />

    {% include 'comment/new.html.twig' with {'comment_form': comment_form} %}

</div>