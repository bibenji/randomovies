{% extends 'layout.html.twig' %}

{% block title %}Admin - Login{% endblock %}

{% block body %}

	<div id="contenu" class="container">		
		<div id="connexion" class="row">			
			<div class="offset-lg-3 col-lg-6 mt-3">
				<div class="card">
					<img class="card-img-top" src="/images/connexion-card-header.jpg" />
					<div class="card-body">

						<h3 class="mb-4">Connexion</h3>

						<div id="login-form-errors">
                            {% if error %}
								<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
						</div>

						<form action="{{ path('login') }}" method="post">
							<input type="text"id="username" name="_username" value="{{ last_username }}" class="randomovies-default-field" placeholder="Nom d'utilisateur" />
							<input type="password" id="password" name="_password" class="randomovies-default-field" placeholder="Mot de passe" />

                            {#
                                If you want to control the URL the user
                                is redirected to on success (more details below)
                                <input type="hidden" name="_target_path" value="/account" />
                            #}

							<input type="reset" value="Remettre à zéro" class="randomovies-default-btn" />

							<input type="submit" value="Envoyer" class="randomovies-default-btn float-right" />
						</form>

						<div class="text-center mt-3">
							<p>Pas encore inscrit ? Qu'est-ce que vous attendez !</p>
							<a href="{{ path('user_registration') }}">S'inscrire</a>
						</div>

						<hr />

						<div class="text-center mt-3">
							<p>Mot de passe oublié ?</p>
							<a href="{{ path('password_forgotten') }}">Ré-initialiser mon mot de passe</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>		

{% endblock %}