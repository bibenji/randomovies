{% extends 'layout.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Randomovies - Ré-initialiser votre mot de passe{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 m-5">

            <h2>Ré-initialisation de votre mot de passe</h2>
            <p>Renseignez ici votre nouveau mot de passe :</p>

            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.plainPassword) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <div class="float-right ml-1">
                            {{ form_row(form.reset) }}
                        </div>
                        {{ form_row(form.submit) }}
                    </div>
                </div>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}