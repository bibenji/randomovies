{% extends 'layout.html.twig' %}

{% block title %}Admin - Movies List{% endblock %}

{% block body %}

    <div id="my-account" class="row">

        <div class="col-md-6">
            <h2>Mon compte</h2>
            <p>Nom d'utilisateur : {{ app.user.username }}</p>
            <p>Email : {{ app.user.email }}</p>
            <p>Nom : </p>
            <p>Pr√©nom : </p>
            <p>Date de naissance : </p>
            <a href="" class="btn randomovies-btn-confirm">Modifier mes informations</a>
        </div>

        <div class="col-md-6">
            <h2>Mes commentaires / Mes notes</h2>
            <ul class="list-group">
                {% for comment in app.user.comments %}
                    <li class="list-group-item">
                        {{ comment.movie.title }} (00/00/0000), ({{ comment.note }}/5): {{ comment.comment }}
                        <div class="text-center">
                            [&nbsp;
                            <a href="{{ path('comment-edit', { 'id': comment.id }) }}" class="btn btn-warning">Edit</a>
                            &nbsp;|&nbsp;
                            <a href="{{ path('comment-delete', { 'id': comment.id }) }}" class="btn btn-danger">Delete</a>
                            &nbsp;]
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>

    </div>

{% endblock %}