{% extends 'layout.html.twig' %}

{% block title %}RandoMovies - Home{% endblock %}

{% block body %}

	<div id="actor-card" class="container">
		<div class="row mt-4 pb-3">
			<div class="col-md-5">
                {% for index, media in actor.medias %}
					<img class="{{ index == 0 ? 'main-photo' : 'other-photo' }}" alt="{{ media.name }}" src="{{ asset('images/medias/' ~ media.path) }}" />
                {% endfor %}
			</div>
			<div class="col-md-7">
				<h2>{{ actor.getFullName() }}</h2>
				<p>{{ actor.birthdate|date('d/m/Y') }} (XX years old)</p>
				<p>
					Biographie :<br />
                    {% if actor.biography is not null %}
                        {{ actor.biography }}
                    {% else %}
						Biography is coming...
                    {% endif %}
				</p>
				<p>
					Filmographie :<br />
				<ul>
                    {% for role in actor.roles %}
						<li>
                            {{ role.movie.year }}: <a href="{{ path('show', {'id':role.movie.id}) }}">{{ role.movie.title }}</a> ({{ role.personnage ?? role.role }})
						</li>
                    {% endfor %}
				</ul>
				</p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 text-center mb-3">
				<a href="{{ path('list_actors') }}">Retour Ã  la liste des acteurs</a>
			</div>
		</div>
	</div>

{% endblock %}
