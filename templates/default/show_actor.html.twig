{% extends 'layout.html.twig' %}

{% block title %}RandoMovies - Home{% endblock %}

{% block body %}
	<div class="col-md-8 jumbotron">
		<div class="text-center">
			<h2 class="text-center">{{ actor.getFullName() }}</h2>
			<p>{{ actor.birthdate|date('d/m/Y') }} (XX years old)</p>
			<hr />
		</div>

		<div>
			<h3 class="text-center">Medias</h3>
			<div class="row">
                {% for media in actor.medias %}
					<div class="col-md-3 text-center">
						<img class="media-preview" src="{{ asset('images/medias/' ~ media.path) }}" />
						<p>{{ media.name }}</p>
					</div>
                {% endfor %}
			</div>
			<hr />
		</div>

		<div class="row">
			<div class="col-md-6">
				<h3 class="text-center">Bigraphy</h3>
				<hr />
				{% if actor.biography is not null %}
					{{ actor.biography }}
				{% else %}
					Biography is coming...
				{% endif %}
			</div>
			<div class="col-md-6">
				<h3 class="text-center">Filmography</h3>
				<hr />
				<ul>
                    {% for role in actor.roles %}
						<li>
							{{ role.movie.year }}: <a href="{{ path('show', {'id':role.movie.id}) }}">{{ role.movie.title }}</a> ({{ role.personnage ?? role.role }})
						</li>
                    {% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
