{% extends 'layout.html.twig' %}

{% block title %}Admin - Movies List{% endblock %}

{% block body %}

    <div class="col-md-8">

        <div class="simply-white">
            <h1>Edition d'un commentaire</h1>
            <div class="row">
                <div class="col-md-6">
                    <h2>{{ comment.movie.title }}</h2>
                </div>
                <div class="col-md-6">

                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.comment) }}
                            &nbsp;
                            {{ form_widget(form.comment) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.note) }}
                            &nbsp;
                            {{ form_widget(form.note) }}
                        </div>

                        <input type="submit" class="btn btn-primary" />
                    {{ form_end(form) }}
                </div>
            </div>



        </div>

    </div>

{% endblock %}