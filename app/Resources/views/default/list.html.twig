{% extends 'layout.html.twig' %}

{% block title %}RandoMovies - Home{% endblock %}

{% block body %}
	<div class="container">	
		<div class="jumbotron">
			<div class="row">
				<div class="col-md-2">
					<h3>YOU COULD LIKE TOO</h3>
					<img class="img-thumbnail" src="{{ asset('images/fake-posters/inception-1.jpg') }}" />										
					<img class="img-thumbnail" src="{{ asset('images/fake-posters/moonrise-kingdom.jpg') }}" />										
					<img class="img-thumbnail" src="{{ asset('images/fake-posters/showgirls.jpg') }}" />										
					<img class="img-thumbnail" src="{{ asset('images/fake-posters/the-rum-diary.jpg') }}" />															
				</div>
				<div class="col-md-10">
					<div class="row">
						<div class="col-md-12">
							<h2 class="text-center">Tous les films</h2>					
							<hr />
							{% set lettre = '' %}
							{% for movie in movies %}
								{% if movie.title|slice(0,1) != lettre %}
									{% set lettre = movie.title|slice(0,1) %}
									<h4>{{ lettre }}</h4>
								{% endif %}
								<a href="{{ path('show', { 'id' : movie.id }) }}">{{ movie.title }}</a><br/>
							{% endfor %}
						</div>
					</div>					
				</div>
			</div>
		</div>
	</div>
	
{% endblock %}
